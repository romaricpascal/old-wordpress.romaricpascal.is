{
  "name": "romaricpascal.is",
  "version": "1.0.0",
  "description": "Wordpress theme",
  "main": "scss/style.scss",
  "scripts": {
    "build:js": "uglifyjs `cat .uglify-files.list` -o main.js",
    "build:css": "node-sass scss/style.scss | postcss -c .postcssrc",
    "build": "run-p build:css build:js",
    "dev:css": "chokidar 'scss/**/*.scss' -c 'npm run build:css' --initial",
    "dev:js": "chokidar 'js/**/*.js' -c 'npm run build:js -- --source-map-inline ' --initial",
    "dev:up": "browser-sync start -p localhost:8080 -f **/*.php main.js style.css",
    "dev": "run-p dev:js dev:css"
  },
  "keywords": [
    "Wordpress",
    "theme"
  ],
  "author": "Romaric Pascal <hello@romaricpascal.is>",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.10.0",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.1",
    "postcss-banner": "^3.0.0",
    "postcss-cli": "^2.6.0"
  },
  "dependencies": {
    "browser-sync": "^2.18.7",
    "inuitcss": "^6.0.0-beta.4",
    "normalize.css": "^5.0.0",
    "sass-mq": "^3.3.2",
    "uglify-js": "^2.7.5",
    "waypoints": "^4.0.1"
  }
}
